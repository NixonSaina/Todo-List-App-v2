{
  "name": "my-todo-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron.js",
  "scripts": {
    "dev": "npm-run-all -p vite electron-dev",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron-dev": "wait-on http://localhost:5173 && electron .",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "electron": "^26.6.10",
    "electron-builder": "^23.6.0",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.11.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "npm-run-all": "^4.1.5",
    "vite": "^5.4.8",
    "vite-plugin-electron": "^0.28.8",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.my-todo-app",
    "productName": "MyTodoApp",
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "path/to/your/icon.ico"
    }
  }
}
